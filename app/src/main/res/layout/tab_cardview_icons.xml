<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/newquery_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/btn_query"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:background="@drawable/image_press_newq" />

                    <TextView
                        android:id="@+id/tvqnotify"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_gravity="top|right"
                        android:background="@drawable/circle_tv"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </FrameLayout>

                <TextView
                    android:id="@+id/tv_icon_newq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="New Queries"
                    android:textColor="@color/mds_bluegrey_600"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/cons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="18dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/btn_cons"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/image_press_consq" />

                    <TextView
                        android:id="@+id/tvcons"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_gravity="top|right"
                        android:background="@drawable/circle_tv"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_icon_newc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Consultations"
                    android:textColor="@color/mds_bluegrey_600"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logo_layout_hotline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="18dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/btn_support"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/image_press_bookq" />


                    <TextView
                        android:id="@+id/tvnewbookings"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_gravity="top|right"
                        android:background="@drawable/circle_tv"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_icon_newh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Hotline"
                    android:textColor="@color/mds_bluegrey_600"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/logo_layout_refer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="18dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/image_press_refer" />


                    <TextView
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_gravity="top|right"
                        android:background="@drawable/circle_tv"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_icon_newr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Refer Doc"
                    android:textColor="@color/mds_bluegrey_600"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>