<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_300"
        android:orientation="vertical">

        <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
            android:id="@+id/scrollable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_offer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/home_banner_bg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/captionTitleView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome to iCliniq"
                                android:textColor="@color/mds_bluegrey_700"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="250dp"
                                android:layout_height="0.5dip"
                                android:layout_marginTop="5dp"
                                android:background="@color/mds_bluegrey_800" />

                            <TextView
                                android:id="@+id/captionTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="sans-serif"
                                android:text="Consult your patients"
                                android:textAllCaps="false"
                                android:textColor="@color/mds_bluegrey_800"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvwelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Welcome to iCliniq"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <include
                    layout="@layout/cardview_icons"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/cardview_wallet"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="50dp"
                    android:visibility="gone" />

                <include
                    layout="@layout/cardview_homeoffer1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />

                <!-- <include
                     layout="@layout/cardview_homeoffer2"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp" />-->

            </LinearLayout>

        </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>


        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu_red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/i_logo_white"
            fab:menu_backgroundColor="#ccffffff"
            fab:menu_colorNormal="@color/app_color"
            fab:menu_colorPressed="@color/blue_400"
            fab:menu_colorRipple="@color/blue_400"
            fab:menu_icon="@mipmap/i_logo_white"
            fab:menu_labels_ellipsize="end"
            fab:menu_labels_hideAnimation="@anim/jump_to_down"
            fab:menu_labels_showAnimation="@anim/jump_from_down"
            fab:menu_labels_singleLine="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/transaction_icon"
                fab:fab_label="Transaction List"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/payout_fab_icon"
                fab:fab_label="Payout Details"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fab_hpat_icon"
                fab:fab_label="Hotline Patients"
                fab:fab_size="mini" />

        </com.github.clans.fab.FloatingActionMenu>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:background="@color/black"
        android:visibility="gone">

        <ImageView
            android:id="@+id/home_ad"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:foregroundGravity="center"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/ad_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|top"
            android:padding="8dp"
            android:src="@mipmap/close_thin"
            android:tint="@color/red_700"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/ad_close_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:background="@drawable/button_rounded_close"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/tv_ad_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="close"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_ad_close"
                android:src="@mipmap/close_white"
                android:tint="@color/black" />

        </RelativeLayout>

        <!--       <TextView
                   android:id="@+id/tv_ad_close"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="right|top"
                   android:text="close"
                   android:fontFamily="sans-serif"
                   android:padding="5dp"
                   android:layout_marginRight="5dp"
                   android:textColor="@color/red_400"
                   android:textSize="17sp"
                   android:textStyle="normal" />-->

    </FrameLayout>

</FrameLayout>