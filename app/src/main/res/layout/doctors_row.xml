<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_poster"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/doctor_icon"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvdocname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:text="Dr. Anshul Varshney"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvedu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="2"
                android:text="M.B.B.S, M.D. MEDICINE"
                android:textColor="@color/grey_900"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tvspec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-thin"
                android:maxLines="2"
                android:text="Paediatric Dentistry, Dentistry, Periodontist, Endodontist"
                android:textColor="@color/red_900"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-thin"
                android:maxLines="2"
                android:text="Paediatric Dentistry, Dentistry, Periodontist, Endodontist"
                android:textColor="@color/red_800"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvcfee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-thin"
                android:maxLines="2"
                android:text="Paediatric Dentistry, Dentistry, Periodontist, Endodontist"
                android:textColor="@color/red_800"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvqfee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-thin"
                android:maxLines="2"
                android:text="Paediatric Dentistry, Dentistry, Periodontist, Endodontist"
                android:textColor="@color/red_800"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="22dip"
        android:layout_height="22dip"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/right" />
</RelativeLayout>