<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_qactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Quick Actions"
                android:textColor="@color/mds_bluegrey_800"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">

                    <LinearLayout
                        android:id="@+id/b1_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dip">


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="43dp"
                                    android:layout_height="43dp"
                                    android:src="@mipmap/newquries_grid_icon" />

                                <TextView
                                    android:id="@+id/tv_gridtext1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif"
                                    android:text="New Queries"
                                    android:textColor="@color/mds_bluegrey_800"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvqnotify"
                                android:layout_width="25dip"
                                android:layout_height="25dip"
                                android:layout_gravity="top|right"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/circle_tv"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </FrameLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/b2_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dip">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="43dp"
                                    android:layout_height="43dp"
                                    android:src="@mipmap/consultation_grid_icon" />


                                <TextView
                                    android:id="@+id/tv_gridtext2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif"
                                    android:text="Consultation"
                                    android:textColor="@color/mds_bluegrey_800"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvcons"
                                android:layout_width="25dip"
                                android:layout_height="25dip"
                                android:layout_gravity="top|right"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/circle_tv"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/b3_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dip">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="43dp"
                                    android:layout_height="43dp"
                                    android:src="@mipmap/wallet_grid_icon" />


                                <TextView
                                    android:id="@+id/tv_gridtext3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif"
                                    android:text="My Wallet"
                                    android:textColor="@color/mds_bluegrey_800"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_icon_newc"
                                android:layout_width="25dip"
                                android:layout_height="25dip"
                                android:layout_gravity="top|right"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/circle_tv"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </FrameLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/refer_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dip"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="43dp"
                                    android:layout_height="43dp"
                                    android:src="@mipmap/hotline_grid_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif"
                                    android:text="Hotline"
                                    android:textColor="@color/mds_bluegrey_800"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="25dip"
                                android:layout_height="25dip"
                                android:layout_gravity="top|right"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/circle_tv"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </FrameLayout>
                    </LinearLayout>
                </TableRow>


                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">

                    <LinearLayout
                        android:id="@+id/b4_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dip">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="43dp"
                                    android:layout_height="43dp"
                                    android:src="@mipmap/qases_grid_icon" />

                                <TextView
                                    android:id="@+id/tv_gridtext4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif"
                                    android:text="Cases"
                                    android:textColor="@color/mds_bluegrey_800"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="25dip"
                                android:layout_height="25dip"
                                android:layout_gravity="top|right"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/circle_tv"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/b5_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dip">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="43dp"
                                    android:layout_height="43dp"
                                    android:src="@mipmap/qhistory_grid_icon" />


                                <TextView
                                    android:id="@+id/tv_gridtext5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif"
                                    android:text="Analytics"
                                    android:textColor="@color/mds_bluegrey_800"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="25dip"
                                android:layout_height="25dip"
                                android:layout_gravity="top|right"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/circle_tv"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="gone" />


                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/b6_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dip">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="43dp"
                                    android:layout_height="43dp"
                                    android:src="@mipmap/wallet_settings"
                                    android:tint="@color/grey_400" />


                                <TextView
                                    android:id="@+id/tv_gridtext6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="sans-serif"
                                    android:text="Settings"
                                    android:textColor="@color/mds_bluegrey_800"
                                    android:textSize="15sp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="25dip"
                                android:layout_height="25dip"
                                android:layout_gravity="top|right"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/circle_tv"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="gone" />


                        </FrameLayout>

                    </LinearLayout>

                </TableRow>


            </TableLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/newquery_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/btn_query"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:background="@drawable/image_press_newq" />

                        <TextView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_gravity="top|right"
                            android:background="@drawable/circle_tv"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone" />


                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_icon_newq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="New Queries"
                        android:textColor="@color/mds_bluegrey_600"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/cons_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/btn_cons"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/image_press_consq" />

                        <TextView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_gravity="top|right"
                            android:background="@drawable/circle_tv"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Consultations"
                        android:textColor="@color/mds_bluegrey_600"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logo_layout_hotline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/btn_support"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/image_press_bookq" />


                        <TextView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_gravity="top|right"
                            android:background="@drawable/circle_tv"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_icon_newh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Hotline"
                        android:textColor="@color/mds_bluegrey_600"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/logo_layout_refer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_margin="1dp"
                            android:background="@drawable/image_press_refer" />


                        <TextView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_gravity="top|right"
                            android:background="@drawable/circle_tv"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_icon_newr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Refer Doc"
                        android:textColor="@color/mds_bluegrey_600"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>