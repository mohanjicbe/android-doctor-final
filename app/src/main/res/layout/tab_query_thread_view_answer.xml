<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:fontFamily="sans-serif-medium"
            android:text="Answer"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="gone" />


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@color/blue_50"
            card_view:cardCornerRadius="3dp"
            card_view:contentPadding="5dp">

            <LinearLayout
                android:id="@+id/qns_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/doc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:visibility="gone">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/doc_photo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3dp"
                        android:src="@mipmap/doctor_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvdocname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="sans-serif-light"
                            android:text="Dr.Sameer Kumar"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvdocspec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="2"
                            android:text="Dr.Sameer Kumar"
                            android:textColor="@color/grey_800"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tvdocid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="sans-serif-light"
                            android:text="Dr.Sameer Kumar"
                            android:textColor="@color/blue_300"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnaskquery"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Ask your Question >>"
                            android:textAllCaps="false"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_rounded_corner_anstitle"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Answer"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Answer"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_datetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif"
                        android:gravity="right"
                        android:text="13.Mar.2016 06:20pm"
                        android:textColor="@color/grey_700"
                        android:textSize="17sp" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="5dp"
                    android:background="@color/mds_bluegrey_600" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvanswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:padding="10dp"
                        android:text="The medication does have some side effects like the liver enzymes. The medication does have some side effects like the liver enzymesThe medication does have some side effects like the liver enzymes"
                        android:textColor="@color/mds_bluegrey_900"
                        android:textSize="21sp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                    //----------------------="The Probable causes:"----------------

                    <TextView
                        android:id="@+id/tvt_probcause"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="The Probable causes:"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_probcause"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:text="Rest for rheumatoid arthritis, your treatment is going in right direction."
                        android:textColor="@color/grey_900"
                        android:textSize="18sp" />
                    //----------------------="The Probable causes:"----------------


                    //----------------------"Investigations to be done:"-----------------

                    <TextView
                        android:id="@+id/tvt_invdone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Investigations to be done:"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_invdone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Rest for rheumatoid arthritis, your treatment is going in right direction."
                        android:textColor="@color/grey_900"
                        android:textSize="18sp" />
                    //----------------------"Investigations to be done:"-----------------


                    //----------------------"Differential diagnosis:"------------------

                    <TextView
                        android:id="@+id/tvt_diffdiag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Differential diagnosis:"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_diffdiag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Rest for rheumatoid arthritis, your treatment is going in right direction."
                        android:textColor="@color/grey_900"
                        android:textSize="18sp" />
                    //---------------------"Differential diagnosis:"-----------------


                    //----------------------"Probable diagnosis"-------------------

                    <TextView
                        android:id="@+id/tvt_probdiag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Probable diagnosis"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_probdiag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Rest for rheumatoid arthritis, your treatment is going in right direction."
                        android:textColor="@color/grey_900"
                        android:textSize="18sp" />
                    //----------------------"Probable diagnosis"-----------------


                    //-----------------------Treatment plan:"------------------

                    <TextView
                        android:id="@+id/tvt_tratplan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Treatment plan:"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_tratplan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Rest for rheumatoid arthritis, your treatment is going in right direction."
                        android:textColor="@color/grey_900"
                        android:textSize="18sp" />
                    //-----------------------Treatment plan:"------------------

                    //-----------------------Preventive measures--------------------

                    <TextView
                        android:id="@+id/tvt_prevmeasure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Preventive measures:"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_prevmeasure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Rest for rheumatoid arthritis, your treatment is going in right direction."
                        android:textColor="@color/grey_900"
                        android:textSize="18sp" />
                    //-----------------------Preventive measures--------------------


                    //-----------------------Regarding follow up --------------------

                    <TextView
                        android:id="@+id/tvt_follup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Regarding follow up:"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_follup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:autoLink="all"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:linksClickable="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Rest for rheumatoid arthritis, your treatment is going in right direction."
                        android:textColor="@color/grey_900"
                        android:textSize="18sp" />

                    <!--                    <TextView
                                            android:id="@+id/tv_datetime"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="sans-serif"
                                            android:gravity="right"
                                            android:text="13.Mar.2016 06:20pm"
                                            android:textColor="@color/grey_700"
                                            android:textSize="12sp" />-->
                    //-----------------------Regarding follow up --------------------
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>