<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.MyApp.ActionBar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_100"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="Balance"
                android:textColor="@color/app_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/wcursymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:text="Rs."
                    android:textColor="@color/mds_bluegrey_800"
                    android:textSize="17dp" />


                <TextView
                    android:id="@+id/tv_bal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="650.00"
                    android:textColor="@color/mds_bluegrey_800"
                    android:textSize="35sp" />
            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                card_view:cardCornerRadius="3dp"
                card_view:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_qactions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif"
                        android:text="Quick Actions"
                        android:textColor="@color/mds_bluegrey_800"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:shrinkColumns="*"
                        android:stretchColumns="*">


                        <TableRow
                            android:id="@+id/tableRow1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/b1_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="?android:attr/selectableItemBackground"
                                android:gravity="center"
                                android:orientation="vertical">


                                <FrameLayout
                                    android:id="@+id/layout_walltrans"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/layout_border_grey"
                                    android:padding="5dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:src="@mipmap/wallet_wallettrans" />


                                        <TextView
                                            android:id="@+id/tv_gridtext1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="sans-serif"
                                            android:text="Wallet Transactions"
                                            android:textColor="@color/mds_bluegrey_800"
                                            android:textSize="15sp"
                                            android:textStyle="normal" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tvqnotify"
                                        android:layout_width="25dip"
                                        android:layout_height="25dip"
                                        android:layout_gravity="top|right"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="0dp"
                                        android:background="@drawable/circle_tv"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:text="1"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:visibility="gone" />

                                </FrameLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/b2_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="?android:attr/selectableItemBackground"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/layout_border_grey"
                                    android:padding="5dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:src="@mipmap/wallet_payouttrans" />


                                        <TextView
                                            android:id="@+id/tv_gridtext2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="sans-serif"
                                            android:text="Payout Transactions"
                                            android:textColor="@color/mds_bluegrey_800"
                                            android:textSize="15sp"
                                            android:textStyle="normal" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tvcons"
                                        android:layout_width="25dip"
                                        android:layout_height="25dip"
                                        android:layout_gravity="top|right"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="0dp"
                                        android:background="@drawable/circle_tv"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:text="1"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:visibility="gone" />
                                </FrameLayout>

                            </LinearLayout>


                        </TableRow>


                        <TableRow
                            android:id="@+id/tableRow2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/b3_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="?android:attr/selectableItemBackground"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/layout_border_grey"
                                    android:padding="5dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:src="@mipmap/wallet_earningshap" />

                                        <TextView
                                            android:id="@+id/tv_gridtext4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="sans-serif"
                                            android:text="Earning Snapshot"
                                            android:textColor="@color/mds_bluegrey_800"
                                            android:textSize="15sp"
                                            android:textStyle="normal" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="25dip"
                                        android:layout_height="25dip"
                                        android:layout_gravity="top|right"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="0dp"
                                        android:background="@drawable/circle_tv"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:text="1"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:visibility="gone" />
                                </FrameLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/b4_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="?android:attr/selectableItemBackground"
                                android:gravity="center"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/layout_border_grey"
                                    android:padding="5dip">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:src="@mipmap/wallet_settings" />


                                        <TextView
                                            android:id="@+id/tv_gridtext5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="sans-serif"
                                            android:text="Wallet Settings"
                                            android:textColor="@color/mds_bluegrey_800"
                                            android:textSize="15sp"
                                            android:textStyle="normal" />

                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="25dip"
                                        android:layout_height="25dip"
                                        android:layout_gravity="top|right"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginTop="0dp"
                                        android:background="@drawable/circle_tv"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:text="1"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:visibility="gone" />


                                </FrameLayout>

                            </LinearLayout>

                        </TableRow>


                    </TableLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/newquery_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/btn_query"
                                    android:layout_width="65dp"
                                    android:layout_height="65dp"
                                    android:background="@drawable/image_press_newq" />

                                <TextView
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_gravity="top|right"
                                    android:background="@drawable/circle_tv"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />


                            </FrameLayout>

                            <TextView
                                android:id="@+id/tv_icon_newq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:fontFamily="sans-serif-light"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="New Queries"
                                android:textColor="@color/mds_bluegrey_600"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/cons_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="18dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">


                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/btn_cons"
                                    android:layout_width="65dp"
                                    android:layout_height="65dp"
                                    android:layout_margin="1dp"
                                    android:background="@drawable/image_press_consq" />

                                <TextView
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_gravity="top|right"
                                    android:background="@drawable/circle_tv"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="sans-serif-light"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="Consultations"
                                android:textColor="@color/mds_bluegrey_600"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/logo_layout_hotline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="18dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/btn_support"
                                    android:layout_width="65dp"
                                    android:layout_height="65dp"
                                    android:layout_margin="1dp"
                                    android:background="@drawable/image_press_bookq" />


                                <TextView
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_gravity="top|right"
                                    android:background="@drawable/circle_tv"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/tv_icon_newh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="sans-serif-light"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="Hotline"
                                android:textColor="@color/mds_bluegrey_600"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/logo_layout_refer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="18dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="65dp"
                                    android:layout_height="65dp"
                                    android:layout_margin="1dp"
                                    android:background="@drawable/image_press_refer" />


                                <TextView
                                    android:layout_width="25dip"
                                    android:layout_height="25dip"
                                    android:layout_gravity="top|right"
                                    android:background="@drawable/circle_tv"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/tv_icon_newr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"

                                android:fontFamily="sans-serif-light"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="Refer Doc"
                                android:textColor="@color/mds_bluegrey_600"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>