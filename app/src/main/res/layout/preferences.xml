<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.MyApp.ActionBar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_pausepayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:text="Your payout status is "
                android:textColor="@color/grey_900"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_postatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_pausepayout"
                android:fontFamily="sans-serif"
                android:padding="3dp"
                android:text="Active"
                android:textColor="@color/mds_bluegrey_800"
                android:textSize="15sp"
                android:textStyle="bold|italic" />

            <!--<TextView
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="Pause"
                android:textAllCaps="true"
                android:textColor="@color/grey_900"
                android:textSize="11sp" />
-->
            <Button
                android:id="@+id/btn_payout"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_rounded"
                android:elevation="10dp"
                android:text="Pause"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif"
            android:text="My Fees"
            android:textColor="@color/grey_900"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="3dp"
            android:background="@color/mds_bluegrey_300" />

        <RelativeLayout
            android:id="@+id/myqueryfee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_pressed"
            android:onClick="onClick"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:text="My Query Fee"
                android:textColor="@color/mds_bluegrey_600"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_queryfee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img_edit1"
                android:text="Rs.199"
                android:textColor="@color/mds_bluegrey_600"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_edit1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/edit"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myconsfee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_pressed"
            android:onClick="onClick"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:text="My Consultation Fee"
                android:textColor="@color/mds_bluegrey_600"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_consfee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img_edit2"
                android:text="Rs.299"
                android:textColor="@color/mds_bluegrey_600"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_edit2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/edit"
                android:visibility="invisible" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/myconsslot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_pressed"
            android:padding="3dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-light"
                android:text="My Consultation Slot"
                android:textColor="@color/mds_bluegrey_600"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img_edit3"
                android:text="20 minutes"
                android:textColor="@color/mds_bluegrey_600"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_edit3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/edit"
                android:visibility="invisible" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Enable Hotline Chat"
                android:textColor="@color/grey_900"
                android:textSize="15sp" />

            <Switch
                android:id="@+id/switch_hlenable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:buttonTint="@color/app_color"
                android:checked="true" />
        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="5dp"
            android:background="@color/mds_bluegrey_300" />

        <LinearLayout
            android:id="@+id/hotline_fees_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/hl3months"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_pressed"
                android:onClick="onClick"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="For 3 Months"
                    android:textColor="@color/mds_bluegrey_600"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_hl3fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_edit4"
                    android:text="Rs.1999"
                    android:textColor="@color/mds_bluegrey_600"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_edit4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/edit"
                    android:visibility="invisible" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/hl6months"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_pressed"
                android:onClick="onClick"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="For 6 Months"
                    android:textColor="@color/mds_bluegrey_600"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_hl6fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_edit5"
                    android:text="Rs.2999"
                    android:textColor="@color/mds_bluegrey_600"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_edit5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/edit"
                    android:visibility="invisible" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/hl12months"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_pressed"
                android:onClick="onClick"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="For 12 Months"
                    android:textColor="@color/mds_bluegrey_600"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_hl12fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_edit6"
                    android:text="Rs.4999"
                    android:textColor="@color/mds_bluegrey_600"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_edit6"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/edit"
                    android:visibility="invisible" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>