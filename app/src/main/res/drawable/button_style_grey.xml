<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="@color/grey_400" />
            <gradient  android:angle="-90"  android:startColor="@color/grey_300" android:endColor="@color/grey_300"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="@color/grey_300" />
            <solid  android:color="@color/grey_300"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="@color/grey_400" />
            <gradient  android:angle="-90"  android:startColor="@color/grey_400" android:endColor="@color/grey_300" />
        </shape>
    </item>

</selector>